<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio_group"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/radio_button_weixin"
        android:text="微信"
        android:drawableTop="@drawable/tab_weixin_seletctor"
        style="@style/RadioGroupButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/radio_button_address"
        android:text="通讯录"
        android:drawableTop="@drawable/tab_address_selector"
        style="@style/RadioGroupButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/radio_button_find"
        android:text="发现"
        android:drawableTop="@drawable/tab_find_selector"
        style="@style/RadioGroupButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/radio_button_me"
        android:text="我"
        android:drawableTop="@drawable/tab_me_selector"
        style="@style/RadioGroupButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RadioGroup>